---
import BaseLayout from './BaseLayout.astro';
const { frontmatter, badge } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title} activePage="blog">
  <div class="flex flex-col gap-2 justify-center">
    {badge ? <span class="badge badge-primary ">{badge}</span> : null}
    <h1 class="text-4xl font-bold mb-2 text-secondary">
      {frontmatter.title}
    </h1>
    <p class="text-sm text-gray-400">{frontmatter.pubDate.toLocaleDateString()}</p>
    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} class="rounded-lg" />
  </div>
  <div class="prose">
    <slot />
  </div>
</BaseLayout>
